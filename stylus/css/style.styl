@import 'nib'
@import '_fonts'
@import '_animations'

//variables
color-blue = #0099CC

html
body
	height 100%

html *
	font-family josefin
	font-size 18px
	font-weight bold

h1
	font-size 20px
	margin-top 0px

body
	padding 10px

footer
	margin-top 20px

input, select
	background-color white
	border 1px dotted color-blue
	border-radius 4px
	box-sizing border-box
	padding 8px
	outline none
	width 100%

	&:focus
		border 1px dotted green

	&:active
		border 1px solid green

	&.error
		border 1px solid red

input[type=checkbox]
	margin-right 6px

.load
	background url('../img/242.gif') no-repeat
	height 25px
	left 50%
	position absolute
	margin-left -12px
	margin-top @margin-left
	top @left
	width @height

.box
	box-sizing border-box
	border 1px solid color-blue
	border-radius 8px
	margin-bottom 20px
	padding 0.6em

.menu
	float left
	overflow hidden
	width 20%

	input
		margin-bottom 10px

.table-container
	max-height 300px
	overflow-y scroll

.debug .title
	font-style italic

.graph
	float right
	overflow-y hidden
	width 79%

	div
		height 200px !important

	h1
		position absolute

		span
			text-transform uppercase

	#graph
		margin-top 40px

.wrapper
	height 400px

// table
table.table
	border-collapse separate
	border-spacing 2px
	border-radius 4px
	background #cdcdcd
	margin 10px 0px 15px
	width 100%
	text-align left

	tbody td
		color #3d3d3d
		font-size 0.9em
		padding 2px
		background #fff
		vertical-align top

		&:first-child
			width 15%

	tbody tr:nth-child(even) td
		background #e6eeee

	tbody tr:hover td
		background #8dbdd8

/* ==|== media queries ======================================================
	 ========================================================================== */
@media only screen and (max-width: 800px)
	header
		margin-bottom 
	.wrapper
		height auto
	.graph
	.menu
		float none
		width auto
	.menu > div
		display none
	.debug
		display none !important

	.graph
		div
			height 100px !important

/* ==|== non-semantic helper classes ========================================
	 Please define your styles before this section.
	 ========================================================================== */

/* For image replacement */
.ir
	display block
	border 0
	text-indent -999em
	overflow hidden
	background-color transparent
	background-repeat no-repeat
	text-align left
	direction ltr
	*line-height 0

	& br
		display none

.hide
	opacity 0

/* Hide from both screenreaders and browsers: h5bp.com/u */
.hidden
	display none
	visibility hidden

/* Hide only visually, but have it available for screenreaders: h5bp.com/v */
.visuallyhidden
	border 0
	clip rect(0 0 0 0)
	height 1px
	margin -1px
	overflow hidden
	padding 0
	position absolute
	width 1px

	/* Extends the .visuallyhidden class to allow the element to be focusable when navigated to via the keyboard: h5bp.com/p */
	&.focusable:active
	&.focusable:focus
		clip auto
		height auto
		margin 0
		overflow visible
		position static
		width auto

/* Hide visually and from screenreaders, but maintain layout */
.invisible
	visibility hidden

/* Contain floats: h5bp.com/q */
.clearfix:before, .clearfix:after
	content ""
	display table

.clearfix:after
	clear both

.clearfix
	*zoom 1



/* ==|== print styles =======================================================
	 Print styles.
	 Inlined to avoid required HTTP connection: h5bp.com/r
	 ========================================================================== */

@media print
	*
		background transparent
		color black
		box-shadow none
		text-shadow none
		filter none
		-ms-filter none  /* Black prints faster: h5bp.com/s */

	a, a:visited
		text-decoration underline

	a[href]:after
		content " (" attr(href) ")"

	abbr[title]:after
		content " (" attr(title) ")"

	.ir a:after, a[href^="javascript:"]:after, a[href^="#"]:after
		content "" /* Don't show links for images, or javascript/internal links */

	pre, blockquote
		border 1px solid #999
		page-break-inside avoid

	thead
		display table-header-group  /* h5bp.com/t */

	tr, img
		page-break-inside avoid

	img
		max-width 100%

	@page
		margin 0.5cm

	p, h2, h3
		orphans 3
		widows 3

	h2, h3
		page-break-after avoid